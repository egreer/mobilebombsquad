<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>VirtualGraffitiLayarWeb</servlet-name>
		<servlet-class>layar.VirtualGraffitiLayarWebServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>VirtualGraffitiLayarWeb</servlet-name>
		<url-pattern>/layar</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>VirtualGraffitiImageWeb</servlet-name>
		<servlet-class>layar.VirtualGraffitiImageWebServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>VirtualGraffitiImageWeb</servlet-name>
		<url-pattern>/image</url-pattern>
	</servlet-mapping>
	
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>loader.html</welcome-file>
	</welcome-file-list>
</web-app>
